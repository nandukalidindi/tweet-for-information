<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <section class="container">
      <div class="login">
        <h1>Login</h1>
        <form method="post" action="index.html">
          <p>
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
          </p>
          <p>
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </p>
          <p class="remember_me">
            <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
            <% end -%>
        </p>
          <p class="submit"><%= f.submit "Log in"%></p>
        </form>

      </div>

      <div class="login-help">
        <p>Forgot your password? <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Click here to reset it.", new_password_path(resource_name) %><br />
        <% end -%></p>
      </div>
    </section>

<% end %>
